---
import FloatingCubesScene from "./components/FloatingCubesScene";
import SkillsTitle from "./components/SkillsTitle.astro";
import TechSkillsTab from "./components/TechSkillsTab";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="w-full relative h-[calc(100dvh_-_var(--navbar-height))]"
>
  <div class="absolute w-full h-full">
    <FloatingCubesScene client:visible />
  </div>
  <div class="flex flex-col items-center text-white w-full h-full">
    <div class="h-[25%] flex flex-col justify-end gap-5">
      <SkillsTitle />
    </div>

    <div class="h-[75%] w-7xl pt-10">
      <TechSkillsTab client:visible />
    </div>
  </div>
</section>
