---
import FloatingCubesScene from "./components/FloatingCubesScene";
import TechSkillsTab from "./components/TechSkillsTab";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="w-full relative h-[calc(100dvh_-_var(--navbar-height))]"
>
  <div class="absolute w-full h-full">
    <FloatingCubesScene client:visible />
  </div>
  <div class="flex flex-col items-center text-white w-full h-full py-15">
    <span class="h-[20%] flex flex-col justify-center gap-5">
      <h1
        class="text-6xl font-bold text-center z-100"
        data-aos="fade-up"
        data-aos-duration="800"
      >
        Tech Stack
      </h1>
      <p
        class="text-3xl mt-3 text-center max-w-4xl z-100"
        data-aos="fade-up"
        data-aos-duration="800"
      >
        A collection of <span class="text-accent">software technologies</span> I've
        mastered, explored, or integrated into real-world solutions.
      </p>
    </span>

    <div class="h-[80%] w-7xl pt-10">
      <TechSkillsTab client:visible />
    </div>
  </div>
</section>
