---
import ProjectsTitle from "./components/ProjectsTitle.astro";
import { projectsData } from "./data/projectsData";
import ProjectCard from "./components/ProjectCard.astro";
import StillBuildingCard from "./components/StillBuildingCard.astro";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="py-5 flex flex-col items-center justify-start gap-15 text-white px-4 sm:px-8"
>
  <ProjectsTitle />
  <div
    class="grid sm:grid-cols-2 xl:grid-cols-3 gap-5"
    data-aos="fade-up"
    data-aos-duration="1000"
  >
    {projectsData.map((item) => <ProjectCard item={item} />)}
    <StillBuildingCard />
  </div>
</section>
