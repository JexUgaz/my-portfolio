---
import Typewriter from "@/react/Typewriter";
import { type TypedOptions } from "typed.js";

const typedWriterOptions: TypedOptions = {
  strings: ["Software Developer", "Cloud Engineer", "Mobile Developer"],
  typeSpeed: 50,
  backSpeed: 30,
  backDelay: 2000,
  loop: true,
};
---

<h1 class="font-bold text-6xl" data-aos="fade-up" data-aos-duration="1000">
  Hello, I'm Jex
  <br />
  <span class="text-accent relative text-nowrap">
    <Typewriter options={typedWriterOptions} client:load />
    <span class="absolute bottom-0 left-0 h-[3px] w-full bg-accent"></span>
  </span>
</h1>
