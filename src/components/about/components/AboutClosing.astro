---
import DotIcon from "@/components/icons/DotIcon.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<span data-aos="fade-up" data-aos-duration="400">
  <div
    class="p-6 rounded-2xl shadow-[var(--shadow-white)]
          max-w-2xl xl:max-w-4xl
          transition-transform duration-500 hover:scale-105"
  >
    <div class="flex items-center gap-4">
      <DotIcon class="size-6 text-accent" />
      <p class="text-xs xs:text-sm text-white" set:html={t("about.closing")} />
    </div>
  </div>
</span>
