---
import { whoIAmItems } from "@/components/about/data/whoIAmItems";
---

<div class="flex flex-col gap-6">
  {
    whoIAmItems.map((data) => {
      const {
        icon: { Icon, size },
        description,
        title,
      } = data;
      return (
        <div class="relative bg-gray-800 p-6 rounded-2xl shadow-[var(--shadow-white-sm)] transition-transform duration-500 hover:scale-105">
          <h3 class="text-xl font-bold mb-2">{title}</h3>
          <p
            set:html={description}
            class="text-sm text-gray-300 leading-relaxed text-justify text-pretty"
          />
          <Icon class={`absolute top-2 right-2 ${size}`} />
        </div>
      );
    })
  }
</div>
